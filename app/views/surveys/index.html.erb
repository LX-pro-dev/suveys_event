<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Tasty</th>
      <th>Presentation</th>
      <th>Atmosphere</th>
      <th>Total</th>
      <th>Event_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.sort_by { |survey| survey.event_id }.each do |survey| %>
      <tr>
        <td><%= survey.id %></td>
        <td><%= survey.tasty %></td>
        <td><%= survey.presentation %></td>
        <td><%= survey.atmosphere %></td>
        <td><%= survey.total %></td>
        <td><%= survey.event_id %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Surveys from Event <%= (Event.last.id) - 1 %></h1>
<table> 
  <thead>
      <tr>
        <th>Id</th>
        <th>Tasty</th>
        <th>Presentation</th>
        <th>Atmosphere</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <% if survey.event_id == (Event.last.id) - 1 %> 
            <td><%= survey.id %></td>
            <td><%= survey.tasty %></td>
            <td><%= survey.presentation %></td>
            <td><%= survey.atmosphere %></td>
            <td><%= survey.total %></td>
            <td><%= link_to 'Show', survey %></td>
            <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
            <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>

<%= link_to 'New Survey', new_survey_path %>
