      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="presentation" id="presentation3" value="3">
        <label class="form-check-label" for="presentation3">3</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="presentation" id="presentation4" value="4">
        <label class="form-check-label" for="presentation4">4</label>
      </div>
    </div>

    <p>The <strong> atmosphere rate </strong></p>
    <div class="field">
    <% form.label :atmosphere %>
      <div class="form-check form-check-inline" >
        <input class="form-check-input" type="radio" name="atmosphere" id="atmosphere1" value="1">
        <label class="form-check-label" for="atmosphere1">1</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="atmosphere" id="atmosphere2" value="2">
        <label class="form-check-label" for="atmosphere2">2</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="atmosphere" id="atmosphere3" value="3">
        <label class="form-check-label" for="atmosphere3">3</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="atmosphere" id="atmosphere4" value="4">
        <label class="form-check-label" for="atmosphere4">4</label>
      </div>
    </div>
    <input type="submit" value="Submit">

  <div class="field">
    <%= form.label :tasty %>
    <%= form.number_field :tasty %>
  </div>

  <div class="field">
    <%= form.label :presentation %>
    <%= form.number_field :presentation %>
  </div>

  <div class="field">
    <%= form.label :atmosphere %>
    <%= form.number_field :atmosphere %>
  </div>

  <div class="actions">
    <%= form.submit %>
